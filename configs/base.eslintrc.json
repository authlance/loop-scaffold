{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "no-null",
    "eslint-plugin-no-unsanitized"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "ignorePatterns": [
    "node_modules",
    "lib"
  ]
}
